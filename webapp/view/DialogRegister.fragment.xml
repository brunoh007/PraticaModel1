<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>

    <Dialog id="dialogRegister">
        <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
            <form:content>
                <c:Title text="Cadastrar Novo" />
                
                <Label text="Nome" />
                <TextArea value="{/person/name}" width="100%" />

                <Label text="Data de Nascimento" />
                <DatePicker />

                <Label text="Sexo" /> 

                <Label text="Altura" />
                <TextArea value="{/person/height}" />
                
            </form:content>
        </form:SimpleForm>
        
        <endButton>
            <Button text="Salvar" icon="sap-icon://save" type="Success" press="onSaveRegister"/>
            <Button text="Fechar" icon="sap-icon://decline" type="Reject" press="onClosePopup"/>
        </endButton>
    </Dialog>


</c:FragmentDefinition>